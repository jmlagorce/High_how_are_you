<div class='container-admin'>
  <img id='admin-bg' src='./images/admin-bg.jpg'>
</div>
<div class="login">
  <h4 id="login-title">Welcome!</h4>
  <h6 id='login-title'>Login to access your account</h6>
  <form name="login">
    Username<input class='input-field' type="text" name="userid" />
    Password<input class='input-field' type="password" name="pswrd" />
    <input type="button" onclick="check(this.form)" value="Login" class="btn btn-primary add-product-btn login-btn" />
    <input type="reset" value="Cancel" class="btn btn-primary add-product-btn login-btn" />
  </form>

</div>


{{!-- On submission of admin info, div with tables will show --}}


<div class="admin-tables">
  {{!-- Add stock table --}}
  <div class="add-stock">
    <h3 class="table-name">Add Stock</h3>
    <form>
      <br>
      <div class="form-group">
        <label for="exampleInputEmail1">Product ID</label>
        <input type="input" class="form-control" id="exampleFormControlInput1" placeholder="">
      </div>
      <br>
      <div class="form-group">
        <label for="exampleFormControlInput1">Quantity #</label>
        <input type="input" class="form-control" id="exampleFormControlInput1" placeholder="">
      </div>
      <br>
      <button type="button" class="btn btn-primary add-quantity-btn">Add</button>
    </form>

  </div>
  {{!-- Add stock table ends --}}

  {{!-- Shows product under 28(Grams)/ low stock table --}}
  <div class="low-stock">
    <h3 class="table-name">Low Inventory</h3>
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">ID #</th>
          <th scope="col">Name</th>
          <th scope="col">Stock</th>

        </tr>
      </thead>
      <tbody>
        {{#each lowstrain}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.stock}}</td>


        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
  {{!-- End of low stock table --}}

  {{!-- Add product table --}}
  <div class="add-product">

    <h3 class="table-name">Add Product</h3>
    <form>
      <br>
      <div class="form-group">
        <label for="new_name">Name</label>
        <br>
        <input type="input" class="form-control input" id="new_name" placeholder="">
      </div>
      <br>
      <div class="form-group">
        <label for="new_race">Race</label>
        <br>
        <input type="input" class="form-control input" id="new_race" placeholder="">
      </div>
      <br>
      <div class="form-group">
        <label for="new_mood">Mood</label>
        <br>
        <input type="input" class="form-control input" id="new_mood" placeholder="">
      </div>
      <br>
      <div class="form-group">
        <label for="new_stock">Stock</label>
        <br>
        <input type="input" class="form-control input" id="new_stock" placeholder="">
      </div>
      <br>
      <div class="form-group">
        <label for="new_price">Price</label>
        <br>
        <input type="input" class="form-control input" id="new_price" placeholder="">
      </div>
      <br>
      <button type="submit" class="btn btn-primary add-product-btn submit">Add</button>
    </form>

  </div>
  {{!-- End of Add product table --}}

  {{!-- Inventory table --}}
  <div class="inventory">
    <h3 class="table-name">Inventory</h3>
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">ID #</th>
          <th scope="col">Name</th>
          <th scope="col">Race</th>
          <th scope="col">Mood</th>
          <th scope="col">Stock</th>
          <th scope="col">Price</th>
          <th scope="col">Remove</th>
        </tr>
      </thead>
      <tbody>
        {{#each strain}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.race}}</td>
          <td>{{this.mood}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.price}}</td>
          <td><button type="button" class="btn btn-primary remove" value={{this.id}}>Remove</button></td>

        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>

  {{!-- End of inventory table --}}




</div>